{
  "extends": "next/core-web-vitals",
  "rules": {
    "no-restricted-imports" : [
      "error",
      {
        "name": "next/link",
        "message" : "Please import from `@/navigation` instead.",
        "importNames" : ["default"]
      },
      {
        "name" : "next/navigation",
        "message" : "Please import from `@/navigation` instead.",
        "importName" : [
          "redirect",
          "permanentRedirect",
          "useRouter",
          "usePathname"
        ]
      }
    ]
  }
}
